<div class="my-trips-title">
  <h2>My trips</h2>
</div>

<ul class="trip-list">
  <li>
    <div class="one-trip-container">
      <div class="city-name-container">
        City
      </div>
      <div class="trip-date-container">
        Trip Dates
      </div>
      <div class="trip-price-container">
        Price
      </div>
    </div>
  </li>
  <% trips.forEach(trip => { %>
    <li>
      <a href="/trip/my-trips/<%= trip.id %>">
        <div class="one-trip-container">
          <div class="city-name-container">
            <div class="city-name-info">
              <p><%= trip.flight.cityFrom %></p>
            </div>
            <div class="city-name-info">
              <p><%= trip.city %></p>
            </div>
          </div>
          <div class="trip-date-container">
            <div class="trip-date-info">
              <p><%= trip.departureDate %></p>
            </div>
            <div class="trip-date-info">
              <p><%= trip.returnDate %></p>
            </div>
          </div>
          <div class="trip-price-container">
            <% const total = trip.cost.flightCost + trip.cost.accommodationCost%>
            <p>â‚¬<%= total %></p>
          </div>
        </div>
      </a>
    </li>
  <% }); %>
</ul>

<div class=home-btn>
  <a href="/home"><img src="/images/home.png" alt="home button"></a>
</div>
